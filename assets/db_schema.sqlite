CREATE TABLE mgnifam (
    id INTEGER PRIMARY KEY,
    family_size INTEGER,
    protein_rep INTEGER,
    rep_region TEXT,
    rep_length INTEGER,
    plddt REAL,
    ptm REAL,
    converged BOOLEAN,
    cif_file TEXT,
    seed_msa_file TEXT,
    msa_file TEXT,
    hmm_file TEXT,
    rf_file TEXT,
    biomes_file TEXT,
    domain_architecture_file TEXT,
    pred_secondary_structure_file TEXT,
    quality_rank INTEGER DEFAULT 0,
    novelty_rank INTEGER DEFAULT 0,
    cif_blob BLOB DEFAULT NULL,
    seed_msa_blob BLOB DEFAULT NULL,
    msa_blob BLOB DEFAULT NULL,
    hmm_blob BLOB DEFAULT NULL,
    rf_blob BLOB DEFAULT NULL,
    biomes_blob BLOB DEFAULT NULL,
    domain_architecture_blob BLOB DEFAULT NULL,
    pred_secondary_structure_blob BLOB DEFAULT NULL
);

CREATE TABLE mgnifam_proteins (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    mgnifam_id INTEGER REFERENCES mgnifam(id),
    protein INTEGER,
    region TEXT
);

CREATE TABLE mgnifam_pfams (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    mgnifam_id INTEGER REFERENCES mgnifam(id),
    rank INTEGER,
    pfam_id VARCHAR(8),
    pfam_hit TEXT,
    query_hmm_range TEXT,
    template_hmm_range TEXT,
    e_value REAL
);

CREATE TABLE mgnifam_folds (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    mgnifam_id INTEGER REFERENCES mgnifam(id),
    target_structure TEXT,
    aligned_length INTEGER,
    query_start INTEGER,
    query_end INTEGER,
    target_start INTEGER,
    target_end INTEGER,
    e_value REAL
);
