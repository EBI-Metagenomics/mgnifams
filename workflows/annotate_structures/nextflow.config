includeConfig 'subworkflows/annotate_structures/nextflow.config'

profiles {

    slurm {
        executor {
            name = "slurm"
            queueSize = 200
            queueGlobalStatus = true
        }
        workDir = "/hps/nobackup/rdf/metagenomics/service-team/users/vangelis/work/"
        singularity {
            enabled = true
            pullTimeout = "3 hours"
            autoMounts = true
            cacheDir = "/hps/scratch/singularity/$USER"
        }
        process {
            queue = 'standard'
            time = '4h'
            cache = "lenient"
            cpus = 1
            memory = 6.GB
            // errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
            // maxRetries = 1
            withLabel: general            { memory = '100.0 MB'; time = '1m' }
            withName: ESMFOLD             { cpus = 4; memory = '16.0 GB' }
            withName: FOLDCOMP_COMPRESS   { cpus = 4; memory = '40.0 GB' }
            withName: FOLDSEEK_EASYSEARCH { cpus = 4; memory = '40.0 GB' }
        }
        params {
            wp1_unannotated_ids_path = "/hps/nobackup/rdf/metagenomics/service-team/users/vangelis/work/df/9db0af13a0d43924fb7f616e97ed5e/unannotated_ids.txt" // "/nfs/production/rdf/metagenomics/users/vangelis/mgnifams/data/output/unannotated_ids.txt"
            family_reps_path = "/hps/nobackup/rdf/metagenomics/service-team/users/vangelis/work/ef/04687026c353cead10145708f1ad06/reps.fa" // "/nfs/production/rdf/metagenomics/users/vangelis/mgnifams/data/output/families/reps.fa"
            dataDir = "/nfs/production/rdf/metagenomics/users/vangelis/mgnifams/data/input/"
            outdir = "/nfs/production/rdf/metagenomics/users/vangelis/mgnifams/data/output/"
            scriptDir = "${baseDir}/bin/"
        }
    }

    local {
        singularity {
            enabled = true
            autoMounts = true
            cacheDir = "/home/vangelis/Desktop/Tools/singularity"
        }
        process {
            withName: ESMFOLD { cpus = 8; memory = '16.0 GB' }
        }
        params {
            wp1_unannotated_ids_path = "${baseDir}/data/output/unannotated_ids.txt"
            family_reps_path = "${baseDir}/data/output/families/reps.fa"
            dataDir = "${baseDir}/data/input/"
            outdir = "${baseDir}/data/output/"
            scriptDir = "${baseDir}/bin/"
        }
    }
}