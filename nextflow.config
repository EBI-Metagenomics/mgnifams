params {

    // Boilerplate options
    help = false

    // Schema validation default options
    validate_params = true

}

profiles {
    slurm {
        executor {
            name              = "slurm"
            queueSize         = 30
            queueGlobalStatus = true
        }
        workDir = "/hps/nobackup/rdf/metagenomics/service-team/users/vangelis/work_mgnifams/"
        singularity {
            enabled     = true
            pullTimeout = "3 hours"
            autoMounts  = true
            cacheDir    = "/hps/scratch/singularity/$USER"
        }
        conda {
            enabled    = true
            autoMounts = true
            cacheDir   = "/hps/nobackup/rdf/metagenomics/service-team/users/vangelis/miniconda3/envs"
        }
        process {
            queue  = 'standard'
            time   = '4h'
            cache  = "lenient"
            cpus   = 1
            memory = 6.GB

            withLabel: gpu {
                clusterOptions = { "--gres=gpu:1" }
            }
        }
        params {
            outDir                         = "/nfs/production/rdf/metagenomics/users/vangelis/mgnifams/output"
            sequence_explorer_protein_path = "/nfs/production/rdf/metagenomics/users/vangelis/plp_flatfiles_pgsql_4/sequence_explorer_protein.csv"
        }
    }
    local {
        singularity {
            enabled    = true
            autoMounts = true
            cacheDir   = "/home/vangelis/Desktop/Tools/singularity"
        }
        conda {
            enabled    = true
            autoMounts = true
            cacheDir   = "/home/vangelis/miniconda3/envs"
        }
        params {
            outDir                         = "${launchDir}/output"
            sequence_explorer_protein_path = "${projectDir}/assets/test_data/sequence_explorer_protein_test_100001.csv"
        }
    }
}

// Nextflow plugins
plugins {
    id 'nf-schema@2.0.0'
}

// Load modules.config for DSL2 module specific options
includeConfig 'conf/modules.config'

// Load subworkflows.config for subworkflow specific options
includeConfig 'conf/subworkflows.config'
