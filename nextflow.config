params {

    // Input options
    sequence_explorer_protein_path = '/nfs/production/rdf/metagenomics/users/vangelis/plp_flatfiles_pgsql_4/sequence_explorer_protein.csv'

    // SETUP_CLUSTERS
    // preprocess_input
    compress_mode = 'none' // 1. gz, 2. bz2 or 3. anything else (ignores decompress)
    // initiate_proteins
    min_sequence_length  = 100
    input_csv_chunk_size = 50000000

    // Boilerplate options
    outdir           = '/nfs/production/rdf/metagenomics/users/vangelis/mgnifams/output'
    publish_dir_mode = 'copy'
    help             = false

    // Schema validation default options
    validate_params = true

}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'

profiles {

    slurm {
        executor {
            name              = "slurm"
            queueSize         = 30
            queueGlobalStatus = true
        }
        singularity {
            enabled     = true
            pullTimeout = "3 hours"
            autoMounts  = true
            cacheDir    = "/hps/scratch/singularity/$USER"
        }
        conda {
            enabled    = true
            autoMounts = true
            cacheDir   = "/hps/nobackup/rdf/metagenomics/service-team/users/vangelis/miniconda3/envs"
        }
        process {
            queue  = 'standard'
            cache  = "lenient"

            withLabel: gpu {
                clusterOptions = { "--gres=gpu:1" }
            }
        }
        workDir = "/hps/nobackup/rdf/metagenomics/service-team/users/vangelis/work_mgnifams/"
    }
    // wave { // TODO
    //     apptainer.ociAutoPull   = true
    //     singularity.ociAutoPull = true
    //     wave.enabled            = true
    //     wave.freeze             = true
    //     wave.strategy           = 'conda,container'
    //     wave.build.repository   = 'docker.io/user/repo'
    // }
    test_local { includeConfig 'conf/test_local.config' }
    local { // TODO remove
        singularity {
            enabled    = true
            autoMounts = true
            cacheDir   = "/home/vangelis/Desktop/Tools/singularity"
        }
        conda {
            enabled    = true
            autoMounts = true
            cacheDir   = "/home/vangelis/miniconda3/envs"
        }
    }

}

// Nextflow plugins
plugins {
    id 'nf-schema@2.0.0'
}

manifest {
    name            = 'ebi-metagenomics/mgnifams'
    author          = """@vagkaratzas"""
    homePage        = 'https://github.com/ebi-metagenomics/mgnifams'
    description     = """MGnify-derived protein families"""
    version         = '1.2.0'
    doi             = ''
}

// Load modules.config for DSL2 module specific options
includeConfig 'conf/modules.config'

// Load subworkflows.config for subworkflow specific options // TODO remove
includeConfig 'conf/subworkflows.config'
