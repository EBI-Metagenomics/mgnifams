profiles {
    slurm {
        process {
            withName: HHSUITE_REFORMAT {
                memory = '100.0 MB'; time = '1h';
                ext.args = '-n 1'
                publishDir = [
                    path: { "${params.outdir}/families" },
                    mode: "copy",
                ]
            }
        }
    }
    lsf {
        process {
            withName: HHSUITE_REFORMAT { 
                memory = '100.0 MB';
                ext.args = '-n 1'
                publishDir = [
                    path: { "${params.outdir}/families" },
                    mode: "copy",
                ]   
            }
        }
    }
    local {
        process {
            withName: HHSUITE_REFORMAT {
                publishDir = [
                    path: { "${params.outdir}/families" },
                    mode: "copy",
                ]   
            }
        }
    }
}
