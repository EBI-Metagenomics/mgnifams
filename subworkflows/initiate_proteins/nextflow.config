        process {
            withName: FILTER_UNANNOTATED        { memory = '40.0 MB'; time = '5h' }
            withName: FILTER_UNANNOTATED_SLICES { memory = '40.0 MB'; time = '5h' }
            withName: EXPORT_PROTEINS_CSV       { memory = '110.0 MB'; time = '70m' }
        }
        params {
            input_csv_chunk_size = 500000
            mgy90_path = "/nfs/production/rdf/metagenomics/users/vangelis/plp_flatfiles_pgsql_2/sequence_explorer_protein.csv.bz2"
        }
    }
    local {
        params {
            input_csv_chunk_size = 2
            mgy90_path = "${baseDir}/test-data/sequence_explorer_protein_test.csv.bz2"
        }
    }
}
