params {
    min_slice_length = 50
}
profiles {
    slurm {
        process {
            withName: FILTER_UNANNOTATED_SLICES { memory = '40.0 MB'; time = '30m' }
            withName: PUBLISH_INPUT_FASTA       { memory = '140.0 MB'; time = '30m' }
            withName: EXPORT_PROTEINS_CSV       { memory = '10.0 MB'; time = '3h' }
        }
        params {
            input_csv_chunk_size = 50000000
        }
    }
    lsf {
        process {
            withName: FILTER_UNANNOTATED_SLICES { memory = '40.0 MB' }
            withName: PUBLISH_INPUT_FASTA       { memory = '140.0 MB' }
            withName: EXPORT_PROTEINS_CSV       { memory = '10.0 MB' }
        }
        params {
            input_csv_chunk_size = 50000000
        }
    }
    local {
        params {
            input_csv_chunk_size = 5000
        }
    }
}
