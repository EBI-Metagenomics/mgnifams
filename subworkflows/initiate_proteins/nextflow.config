params {
    min_sequence_length = 100
}
profiles {
    slurm {
        process {
            withName: FILTER_UNANNOTATED_SLICES { memory = '40.0 MB'; time = '30m' }
            withName: PUBLISH_INPUT_FASTA {
                memory = '140.0 MB'; time = '30m'
                publishDir = [
                    path: { "${params.outDir}" },
                    mode: "copy",
                ]
            }
        }
        params {
            input_csv_chunk_size = 50000000
        }
    }
    local {
        process {
            withName: PUBLISH_INPUT_FASTA { 
                publishDir = [
                    path: { "${params.outDir}" },
                    mode: "copy",
                ]
            }
        }
        params {
            input_csv_chunk_size = 50000
        }
    }
}
