profiles {
    slurm {
        process {
            withName: HHSUITE_REFORMAT {
                memory = '10.0 GB'; time = '48h'
                ext.args = '-n 1'
            }
            withName: HHSUITE_BUILDHHDB { cpus = 8; memory = '6.0 GB'; time = '2h' }
            withName: HHSUITE_HHBLITS { 
                cpus = 8; memory = '5.0 GB'; time = '48h'
                ext.args = '-z 1000' // 50 top results instead of only 10
            }
            withName: COMBINE_HH_RESULTS                   { memory = '100.0 MB'; time = '1h' }
            withName: MAP_FIRST_A3M_SEQUENCES_TO_FAMILY_ID { memory = '200.0 MB'; time = '1h' }
            withName: POOL_FAM_PROTEINS                    { memory = '20.0 MB'; time = '10m' }
            withName: REMOVE_REDUNDANT_AND_TM              { memory = '200.0 GB'; time = '72h' }
            withName: POOL_FAMILY_RESULTS                  { memory = '200.0 MB'; time = '24h' }
        }
        params {
            restart_redundant_fam_ids   = "/nfs/production/rdf/metagenomics/users/vangelis/temp/restart_redundant_fam_ids.txt"
            restart_similarity_edgelist = "/nfs/production/rdf/metagenomics/users/vangelis/temp/restart_similarity_edgelist.csv"
            restart_fam_id              = "256_3"
        }
    }
    local {
        process {
            withName: HHSUITE_REFORMAT  { ext.args = '-n 1' }
            withName: HHSUITE_BUILDHHDB { cpus = 8 }
            withName: HHSUITE_HHBLITS   { cpus = 4; ext.args = '-z 1000' }
        }
        params {
            restart_redundant_fam_ids   = ""
            restart_similarity_edgelist = ""
            restart_fam_id              = ""
        }
    }
}
