            eggnong_diamond_db = "/home/vangelis/Desktop/Tools/eggnog-mapper/tests/fixtures/eggnog_proteins.dmnd"
            uniprot_sprot_fasta_name = "uniprot_sprot.fasta"
            chunk_size = 5
