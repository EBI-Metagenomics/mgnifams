profiles {
    slurm {
        process {
            withName: CREATE_CLUSTERS_PKL { cpus = 8; memory = '180.0 GB'; time = '2h' }
            withName: REFINE_FAMILIES     { cpus = 8; memory = '800.0 GB'; time = '24h' }
        }
        params {
            minimum_members = 50
            iteration = 99
        }
    }
    lsf {
        process {
            withName: CREATE_CLUSTERS_PKL { cpus = 8; memory = '180.0 GB' }
            withName: REFINE_FAMILIES     { cpus = 8; memory = '800.0 GB' }
        }
        params {
            minimum_members = 50
            iteration = 99
        }
    }
    local {
        params {
            minimum_members = 2
            iteration = 0
        }
    }
}
